script#spa-performance-item-module(type='text/x-handlebars-template')                       
	{{#if conversationName}}
	li.spa-conversation-item
		if everyauth.user
			.row
				ul.spa-conversation-user-data
					li.image.col-lg-1.col-xs-12
						a(href='https://graph.facebook.com/#{everyauth.user.fb.id}')
							img(src='https://graph.facebook.com/#{everyauth.user.fb.name.first}.#{everyauth.user.fb.name.last}/picture?type=small')
					li.col-lg-4.col-xs-12
						strong I want to talk about: 
							em {{conversationName}}
					li.col-lg-3.col-xs-12 #{everyauth.user.fb.name.full}
					li.col-lg-1.col-xs-12 #{everyauth.user.fb.gender}
					li.col-lg-3.col-xs-12
						a(href='/#/{{conversationID}}') Join Conversation
	{{/if}}
