/* KEY: 

20px = 1.1rem

*/

$radius = 5px

html
	height 100%

body
	height 100%
	position relative
	font-size 16px

body,
h1,h2,h3,h4,h5,h6
	font-family:'Helvetica Neue',Helvetica,Arial,sans-serif;

ul
	list-style-type none
	list-style-position outside
	padding 0

strong
	font-weight bold

input[type='submit']
	font-weight bold
	font-size 20px

.rounded
	border-radius: $radius;
	-moz-border-radius: $radius;
	-webkit-border-radius: $radius;

header
	border-bottom 1px solid #ddd
	margin-bottom 20px
	padding-bottom 5px
	#logo
		h1
			margin 0
			font-size 30px
			padding 20px 0 0 0
		img
			float left

footer
	border-top 1px solid #ddd
	padding-top 20px
	ul#footer-links
		li
			float left
			margin-left 20px
				
#side-nav
	img
		margin-bottom 20px




